{
    "compilerOptions": {
      "target": "ES2022",
      "baseUrl": ".",
      "paths": {
        "@quiet/identity": ["packages/identity/src/index.ts"],
        "@quiet/state-manager": ["packages/state-manager/src/index.ts"],
        "@quiet/backend": ["packages/backend/src/index.ts"],
        "@quiet/logger": ["packages/logger/src/index.ts"],
