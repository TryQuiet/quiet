{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": ["master", "develop", "workflows/require-e2e-before-build-release", "chore/lerna-publishing-config"],
      "conventionalCommits": true,
      "createRelease": "github"
    },
    "bootstrap" : {
      "hoist": [
        "eslint*", 
        "@typescript-eslint/*",
        "prettier*",
        "lerna"
      ]
    }
  }
}
