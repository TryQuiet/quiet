{
	"name": "@quiet/backend",
	"version": "0.16.0",
	"description": "tlg-manager",
	"types": "lib/index.d.ts",
	"main": "lib/index.js",
	"author": "",
	"license": "MIT",
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"prepare": "npm run build",
		"version": "git add -A src",
		"lint": "eslint --ext .jsx,.js,.ts,.tsx ./src/ --fix",
		"lint-ci": "eslint --ext .jsx,.js,.ts,.tsx ./src/",
		"test": "NODE_OPTIONS=--experimental-vm-modules cross-env DEBUG=ipfs:*,backend:* jest ./src/**/* --runInBand --verbose --testPathIgnorePatterns=\".src/(!?nodeTest*)|(.node_modules*)\"",
		"test-ci": "NODE_OPTIONS=--experimental-vm-modules jest ./src/**/* --runInBand --colors --ci --silent --verbose --testPathIgnorePatterns=\".src/(!?nodeTest*)|(.node_modules*)|src/.*\\.tor.test\\.(t|j)s|src/storage/storageLargeFiles.test.ts$\"",
		"test-ci-tor": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --colors --ci --silent --verbose --testPathPattern=\"src/.*\\.tor.test\\.(t|j)s$\"",
		"test-ci-long-running": "NODE_OPTIONS=--experimental-vm-modules jest --colors --ci --silent --verbose src/storage/storageLargeFiles.test.ts",
		"test-connect": "NODE_OPTIONS=--experimental-vm-modules DEBUG='libp2p:websockets*' jest ./src/nodeTest/* --verbose",
		"test-connect-ci": "NODE_OPTIONS=--experimental-vm-modules jest ./src/nodeTest/* --colors --ci --silent --verbose",
		"test-replication-no-tor": "NODE_OPTIONS=--experimental-vm-modules ts-node -v && cross-env DEBUG='backend:dbSnap*,backend:localTest*' ts-node src/nodeTest/testReplicate.ts --nodesCount 1 --timeThreshold 200 --entriesCount 1000 --no-useTor",
		"test-replication-tor": "NODE_OPTIONS=--experimental-vm-modules cross-env DEBUG='backend:dbSnap*,backend:localTest*' ts-node src/nodeTest/testReplicate.ts --nodesCount 1 --timeThreshold 500 --entriesCount 1000 --useTor",
		"rmDist": "rimraf lib/"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com:TryQuiet/backend.git"
	},
	"files": [
		"lib/**/*",
		"package-lock.json"
	],
	"jest": {
		"runner": "jest-light-runner",
		"transform": {
			"^.+\\.tsx?$": "ts-jest",
			"^.+\\.jsx?$": "babel-jest"
		},
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"transformIgnorePatterns": [
			"/node_modules/"
		],
		"testRegex": "src/.*\\.test\\.(t|j)s$",
		"testEnvironment": "node",
		"testTimeout": 40000,
		"setupFiles": [
			"./jestSetup.js"
		]
	},
	"devDependencies": {
		"@types/crypto-js": "^4.0.2",
		"@types/express": "^4.17.9",
		"@types/jest": "^26.0.23",
		"@types/node": "16.11.7",
		"@types/node-fetch": "^2.5.11",
		"@types/orbit-db": "git+https://github.com/orbitdb/orbit-db-types.git",
		"@types/socket.io": "^2.1.12",
		"@types/validator": "^13.1.4",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@types/ws": "8.5.3",
		"babel-jest": "^29.3.1",
		"cross-env": "^5.2.0",
		"eslint": "^7.32.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-config-standard-with-typescript": "^20.0.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.1.0",
		"jest": "^29.3.1",
		"mock-fs": "^5.1.2",
		"prettier": "^2.1.1",
		"prettier-config-standard": "^1.0.1",
		"tmp": "^0.2.1",
		"jest-light-runner": "0.4.1",
		"ts-jest": "^29.0.3",
		"ts-node":"10.9.1",
		"typescript": "^4.9.3",
		"wait-for-expect": "^3.0.2",
		"yargs": "^17.1.0"
	},
	"dependencies": {
		"@chainsafe/libp2p-noise": "^10.2.0",
		"@chainsafe/libp2p-gossipsub": "^5.3.0",
		"@libp2p/mplex": "^7.1.0",
		"@libp2p/peer-id": "1.1.16",
		"@libp2p/websockets": "5.0.0",
		"@peculiar/webcrypto": "1.2.2",
		"@quiet/identity": "^0.15.0",
		"@quiet/logger": "^0.15.0",
		"@quiet/state-manager": "^0.16.0",
		"abortable-iterator": "^3.0.0",
		"class-validator": "^0.13.1",
		"cli-table": "^0.3.6",
		"commander": "^7.2.0",
		"cors": "^2.8.5",
		"crypto-js": "^4.1.1",
		"debug": "^4.3.1",
		"dotenv": "8.2.0",
		"events": "^3.2.0",
		"express": "^4.17.1",
		"get-port": "^5.1.1",
                "go-ipfs": "npm:mocked-go-ipfs@0.17.0",
		"http-server": "^0.12.3",
		"https-proxy-agent": "^5.0.0",
		"image-size": "^1.0.1",
		"it-ws": "5.0.6",
		"ipfs": "^0.65.0",
		"ipfs-log": "^5.4.2",
		"joi": "^17.4.0",
		"libp2p": "0.40.0",
		"libp2p-bootstrap": "0.14.0",
		"libp2p-gossipsub": "0.13.0",
		"libp2p-kad-dht": "0.28.6",
		"luxon": "^1.11.4",
		"multiaddr": "^10.0.1",
		"orbit-db": "github:TryQuiet/orbit-db#22a31dea94983d2c3a190c9aaf7efd1d5fd62831",
		"orbit-db-io": "1.0.2",
		"orbit-db-pubsub": "0.6.0",
		"orbit-db-store": "4.3.4",
		"peer-id": "^0.16.0",
		"pkijs": "3.0.8",
		"secp256k1": "4.0.3",
		"socket.io": "3.0.5",
		"socks-proxy-agent": "^5.0.0",
		"validator": "^13.6.0"
	}
}
