{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "strictPropertyInitialization": false,
    "rootDir": "./src",
    "outDir": "./lib",
    "typeRoots": [
      "../@types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "src/**/*.test.ts"
  ]
}