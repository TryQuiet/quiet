{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2020",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "typeRoots": [
      "../@types",
      "./node_modules/@types",
      "./src/renderer/expanded-theme.ts"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "cypress"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/__mocks__/*"
  ]
}
