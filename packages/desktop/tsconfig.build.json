{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react",
    "target": "ES2020",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "typeRoots": [
      "../@types",
      "./node_modules/@types"
    ],
    "declaration": false,
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "src/rtl-tests",
    "src/renderer"
  ]
}
