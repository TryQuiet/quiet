    "clearMocks": true,
    "testEnvironment": "jest-environment-node",
    "coverageProvider": "v8",
    "testTimeout": 95000000,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "^@quiet/backend(.*)$": "<rootDir>/../../backend/src/index.ts",
      "^@quiet/logger(.*)$": "<rootDir>/../../logger/src/index.ts",
      "^@quiet/state-manager(.*)$": "<rootDir>/../../state-manager/src/index.ts"
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
