{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "ES2020",
    "module": "ES2022",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "../@types",
      "./node_modules/@types"
    ],
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
